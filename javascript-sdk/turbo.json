{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "build/**"] 
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@apolo-pay/wordpress-plugin#build": {
      "dependsOn": ["^build"],
      "outputs": ["assets/**", "*.zip"],
      "inputs": ["$TURBO_DEFAULT$", "apolo-pay.php", "includes/**"]
    }
  }
}
