{
  "name": "payment-button-sdk",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev",
    "dev:react": "pnpm run build && turbo dev --filter=playground-react",
    "dev:vue": "pnpm run build && turbo dev --filter=playground-vue",
    "dev:svelte": "pnpm run build && turbo dev --filter=playground-svelte",
    "dev:angular": "pnpm run build && turbo dev --filter=playground-angular",
    "dev:astro": "pnpm run build && turbo dev --filter=playground-astro",
    "dev:vanilla": "turbo dev --filter=playground-vanilla",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "turbo": "2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@angular/cli": "^20.3.6",
    "@angular/common": "^20.3.6",
    "@angular/compiler-cli": "^20.3.6",
    "@angular/core": "^20.3.6",
    "@types/ws": "^8.18.1",
    "rxjs": "^7.8.2",
    "ws": "^8.18.3",
    "zone.js": "^0.15.1"
  }
}
