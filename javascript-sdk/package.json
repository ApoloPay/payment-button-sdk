{
  "name": "payment-button-sdk",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "node scripts/dev.js",
    "clean": "pnpm run clean:dist && pnpm run clean:deps && pnpm run clean:turbo",
    "clean:dist": "npx --yes rimraf@latest --glob \"apps/*/dist\" \"packages/*/dist\" \"apps/*/.angular\" \"packages/*/.angular\"",
    "clean:deps": "npx --yes rimraf@latest --glob \"apps/*/node_modules\" \"packages/*/node_modules\" pnpm-lock.yaml && npx --yes rimraf@latest node_modules",
    "clean:turbo": "npx --yes rimraf@latest --glob .turbo \"apps/*/.turbo\" \"packages/*/.turbo\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "rimraf": "^6.1.2",
    "turbo": "2.5.8",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.3",
      "@types/react-dom": "18.3.0",
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  }
}