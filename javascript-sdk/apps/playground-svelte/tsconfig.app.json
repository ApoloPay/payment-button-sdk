{
  "extends": [
    "@tsconfig/svelte/tsconfig.json",
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": [
      "svelte",
      "vite/client"
    ],
    "noEmit": true,
    "paths": {
      "@apolopay-sdk/svelte": [
        "../../packages/svelte/src/lib/index.ts"
      ],
      "@apolopay-sdk/ui": [
        "../../packages/ui/src/index.ts"
      ]
    },
    "allowJs": true,
    "checkJs": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ]
}