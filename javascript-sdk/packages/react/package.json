{
  "name": "@apolopay-sdk/react",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --clean --external react @apolopay-sdk/ui",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --watch --external react @apolopay-sdk/ui"
  },
  "dependencies": {
    "@apolopay-sdk/ui": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "18.3.3",
    "react": "18.3.1",
    "tsup": "8.0.0",
    "typescript": "5.4.5"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}