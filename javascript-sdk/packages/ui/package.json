{
  "name": "@apolopay-sdk/ui",
  "version": "1.1.0",
  "description": "UI Components (Web Components) for payment button",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "main": "./dist/apolopay-sdk.umd.js",
  "module": "./dist/apolopay-sdk.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && vite build",
    "dev": "vite build --watch"
  },
  "dependencies": {
    "@apolopay-sdk/core": "workspace:*",
    "lit": "3.0.0",
    "tslib": "2.8.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/apolopay-sdk.es.js",
      "require": "./dist/apolopay-sdk.umd.js"
    }
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "5.4.5",
    "vite": "^7.3.1"
  }
}