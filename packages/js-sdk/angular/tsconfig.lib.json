{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "Bundler", // O "NodeNext"
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@payment-button-sdk/core": ["../core/src"]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "compilationMode": "partial" // ¡Importante para librerías!
  },
  "include": ["src/index.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}